@model CCB.Models.Contractor
<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3 text-center">
                        <label asp-for="Company"></label>
                    </div>
                    <div class="col-2 text-center">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-2 text-center">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="col-2 text-center">
                        <label asp-for="Title"></label>
                    </div><div class="col-2 text-center">
                        <label asp-for="Manager"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Company" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="LastName" class="form-control" />
                    </div>
                     <div class="col-2">
                        <input asp-for="Title" class="form-control" />
                    </div> <div class="col-2">
                        <input asp-for="Manager" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ <partial name="_ValidationScriptsPartial" />}
}


